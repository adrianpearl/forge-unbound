{
  "name": "donation-widget",
  "version": "1.0.0",
  "description": "A simple embeddable donation widget using Stripe Elements for political campaigns",
  "main": "server/server.cjs",
  "type": "module",
  "scripts": {
    "start": "node server/server.cjs",
    "start:host": "node server/server.cjs --host",
    "start:preview": "node server/server.cjs --preview",
    "start:full": "node server/server.cjs --host --preview",
    "dev": "nodemon server/server.cjs",
    "dev:host": "nodemon server/server.cjs --host",
    "dev:preview": "nodemon server/server.cjs --preview",
    "dev:full": "nodemon server/server.cjs --host --preview",
    "dev:ui": "vite",
    "build:ui": "vite build",
    "preview:ui": "vite preview",
    "dev:react": "npm run build:ui && npm run dev",
    "dev:react:host": "npm run build:ui && npm run dev:host",
    "build:deploy": "npm run build:ui && npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "donation",
    "widget",
    "stripe",
    "political",
    "campaign",
    "fundraising"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "stripe": "^14.9.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.7"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
